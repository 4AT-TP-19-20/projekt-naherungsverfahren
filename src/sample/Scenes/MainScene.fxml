<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane minHeight="900" minWidth="1200" stylesheets="@Styles/styles.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.Scenes.Controller">
    <top>
        <HBox spacing="200">
            <HBox spacing="50">
                <VBox spacing="50">
                    <VBox spacing="10">
                        <Label text="Funktion"/>
                        <Label text="Intervall"/>
                        <Label text="Anzahl Kommastellen"/>
                        <Label text="Maximale Anzahl von Einträgen"/>
                    </VBox>
                    <VBox spacing="10">
                        <Label text="Verfahren 1:"/>
                        <Label text="Verfahren 2:"/>
                        <Label text="Verfahren 3:"/>
                    </VBox>
                </VBox>
                <VBox spacing="50">
                    <VBox spacing="10">
                        <TextField fx:id="txt_Function" promptText="Funktion"/>
                        <HBox>
                            <TextField fx:id="txt_StartValue" promptText="X-Start"/>
                            <TextField fx:id="txt_EndValue" promptText="X-End"/>
                        </HBox>
                        <TextField fx:id="txt_Accuracy" promptText="Kommastellen"/>
                        <TextField fx:id="txt_MaxEntries" promptText="Anzahl Einträge"/>
                    </VBox>
                    <VBox spacing="10">
                        <Label fx:id="lbl_Verfahren1"/>
                        <Label fx:id="lbl_Verfahren2"/>
                        <Label fx:id="lbl_Verfahren3"/>
                    </VBox>
                </VBox>
            </HBox>
            <VBox>
                <LineChart fx:id="lineChart">
                    <xAxis>
                        <NumberAxis>
                            <label>X</label>
                        </NumberAxis>
                    </xAxis>
                    <yAxis>
                        <NumberAxis>
                            <label>Y</label>
                        </NumberAxis>
                    </yAxis>
                </LineChart>
            </VBox>
        </HBox>
    </top>
    <center>
        <VBox>
            <HBox spacing="20">
                <ComboBox fx:id="cb_Verfahren1" onAction="#cmb_selection_Method"/>
                <ComboBox fx:id="cb_Verfahren2" onAction="#cmb_selection_Method"/>
                <ComboBox fx:id="cb_Verfahren3" onAction="#cmb_selection_Method"/>
            </HBox>
            <HBox spacing="20">
                <ScrollPane>
                    <ListView fx:id="lv_container1"/>
                </ScrollPane>
                <ScrollPane>
                    <ListView fx:id="lv_container2"/>
                </ScrollPane>
                <ScrollPane>
                    <ListView fx:id="lv_container3"/>
                </ScrollPane>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <Button text="Calculate" onAction="#btn_Calculate_Click"/>
        </HBox>
    </bottom>
</BorderPane>
